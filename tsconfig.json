{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "Multer"],
    "outDir": "./dist",  // Compiled files will be output here
    "rootDir": "oldUserCode"   // Source TypeScript files are expected here
  },
  "include": ["oldUserCode/**/*.ts"],
  "exclude": ["node_modules"]
} 
